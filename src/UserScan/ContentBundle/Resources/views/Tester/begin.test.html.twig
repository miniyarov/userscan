                    <param name="project_id" value="{{ project.urlId }}">
                    <param name="tester_id" value="{{ tester.sessionId }}">
                </applet>
                <br class="clr">
                <a target="_blank" class="btn btn-info btn-large" href="{{ project.url|raw }}">Siteyi aç</a>
