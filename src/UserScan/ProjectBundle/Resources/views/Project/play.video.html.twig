    <div class="span9">
        <div class="content">
            <div class="well tac">
                <div id="player" style="height: 500px;"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $f('player', '{{ asset('bundles/content/swf/flowplayer-3.2.11.swf') }}', {
        clip: {
            url: '{{ app.request.scheme ~ '://' ~ app.request.host ~ asset('videos/' ~ tester.sessionId ~ '.mp4') }}',
            autoPlay: false,
            autoBuffering: true
        }
    });
</script>
{% endblock %}